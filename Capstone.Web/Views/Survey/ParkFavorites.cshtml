@using Capstone.Web.Models
@model List<Survey>
@{
    ViewBag.Title = "ParkFavorites";
}

<h2> Park Favorites </h2>
<div class="surveyList">
    @foreach (var item in Model)
    {
        <table class="surveyFav">
            <tr>
                <td>
                    @if (Session["degree"] == "Celsius")
                    {
                        <a href="@Url.Action("Celsius", "Home", new {id = item.ParkCode})"><img src="@Url.Content("/Content/img/Parks/" + item.ParkCode + ".jpg")" class="pull-left"></a>
                    }
                    else
                    {
                        <a href="@Url.Action("Farenheit", "Home", new {id = item.ParkCode})"><img src="@Url.Content("/Content/img/Parks/" + item.ParkCode + ".jpg")" class="pull-left"></a>

                    }
                </td>
                <td>
                    <h3>@item.ParkName</h3>
                </td>
                <td>
                    <p>@item.SurveyCount total surveys taken</p>
                </td>
            </tr>
        </table>

    }
</div>