@using Capstone.Web.Models;
@model Survey
@{
    ViewBag.Title = "Survey";
}
<div class="container survey">
    <div class="centered title">
        <h2>Survey</h2>
    </div>
    <hr class="featurette-divider">
    <form action="@Url.Action("Survey", "Survey")" method="post">
        <div class="container">
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-12">
                        <label for="formGroupParkCode">Choose A Park</label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        @Html.DropDownList("ParkCode", Survey.ParkCodes, "-make a choice-")
                        @Html.ValidationMessageFor(m => m.ParkCode, "", new { @style = "color:Red" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-12"> 
                        @Html.LabelFor(m => m.Email)
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        @Html.TextBoxFor(m => m.Email)
                        @Html.ValidationMessageFor(m => m.Email, "", new { @style = "color:Red" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-12">
                        @Html.LabelFor(m => m.State)
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        @Html.DropDownList("State", Survey.States, "-make a choice-")
                        @Html.ValidationMessageFor(m => m.State, "", new { @style = "color:Red" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-12">
                        @Html.LabelFor(m => m.ActivityLevel)
                    </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-2">
                            @Html.RadioButtonFor(m => m.ActivityLevel, "Inactive", false) Inactive
                        </div>
                        <div class="col-sm-2">
                            @Html.RadioButtonFor(m => m.ActivityLevel, "Sedentary", false) Sedentary
                        </div>
                        <div class="col-sm-2">
                            @Html.RadioButtonFor(m => m.ActivityLevel, "Active", false) Active
                        </div>
                        <div class="col-sm-6">
                            @Html.RadioButtonFor(m => m.ActivityLevel, "Extremely Active", false) Extremely Active
                            @Html.ValidationMessageFor(m => m.ActivityLevel, "", new { @style = "color:Red" })
                        </div>
                    </div>
            </div>
            <button class="btn btn-success" >Submit</button>
        </div>
    </form>
</div>


